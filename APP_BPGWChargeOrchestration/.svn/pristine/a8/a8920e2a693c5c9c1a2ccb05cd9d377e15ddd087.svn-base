<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.indracompany</groupId>
		<artifactId>indraph-parent</artifactId>
		<version>1.1</version>
	</parent>

	<groupId>com.indracompany.smart.soa.bpgw</groupId>
	<artifactId>APP_BPGWChargeOrchestartion</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>APP_BPGWChargeOrchestartion</name>
	<description>
    APP_BPGWChargeOrchestartion
	</description>

	<dependencies>
		<dependency>
			<groupId>com.indracompany.smart.soa.common</groupId>
			<artifactId>LIB_Common_BNP</artifactId>
			<version>1.0.0-SNAPSHOT</version>
			<type>zip</type>
		</dependency>
		<dependency>
			<groupId>com.indracompany.smart.soa.common</groupId>
			<artifactId>LIB_UDTO_BNP</artifactId>
			<version>1.0.0-SNAPSHOT</version>
			<type>zip</type>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-sources-to-target</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>target/generate-sources/${project.name}</outputDirectory>
							<resources>
								<resource>
									<directory>src/main/resources</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copy-metadata-to-target</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>target/generate-sources/.metadata/.plugins/org.eclipse.core.runtime/.settings</outputDirectory>
							<resources>
								<resource>
									<directory>src/main/config/</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<id>unpack-dependencies</id>
						<phase>process-resources</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/generate-sources</outputDirectory>
							<includeArtifactIds>LIB_Common_BNP,LIB_UDTO_BNP</includeArtifactIds>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>execute-${project.name}</id>
						<phase>compile</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>cmd</executable>
							<arguments>
								<argument>/X</argument>
								<argument>/C</argument>
								<argument>mqsicreatebar</argument>
								<argument>-data</argument>
								<argument>target/generate-sources</argument>
								<argument>-b</argument>
								<argument>target/${project.artifactId}-${project.version}.bar</argument>
								<argument>-a</argument>
								<argument>${project.name}</argument>
								<argument>-deployAsSource</argument>
							</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>make-artifact</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<artifact>
									<file>target/${project.artifactId}-${project.version}.bar</file>
									<type>bar</type>
								</artifact>
							</artifacts>	
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>